{% extends './base_front.html.twig' %} {% block title %}profile{% endblock %} {%
block body %}

<section class="blog-details-area ptb-100">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-12">
        <div class="blog-details-desc">
          <div class="article-author">
            <a
              type="button"
              class="btn"
              style="
                background-color: #00a9a4;
                margin-left: 1170px;
                padding: 8px;
              "
              href="{{ path('app_user_editpass', { id: app.user.id }) }}"
              >Edit password</a
            >
            <div class="author-profile-header"></div>

            <div class="author-profile">
              <div class="author-profile-title">
                <img
                  src="{{ asset('/uploads/'~app.user.image) }}"
                  class="shadow-sm"
                  alt="image"
                />
                <div
                  class="author-profile-title-details d-flex justify-content-between"
                >
                  <div class="author-profile-details">
                    <h4>{{ app.user.prenom }} - {{ app.user.nom }}</h4>
                    <span class="d-block"
                      >Adresse : {{ app.user.adresse }}</span
                    >
                  </div>
                  <div class="author-profile-raque-profile">
                    <a class="d-inline-block">Tel : {{ app.user.telephone }}</a>
                  </div>
                </div>
              </div>
              <p>Email : {{ app.user.email }}</p>

              <a
                type="button"
                class="btn"
                style="background-color: #00a9a4; padding: 8px"
                href="{{ path('app_user_edit', { id: app.user.id }) }}"
                >Edit</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% endblock %}
