{% extends 'base_front.html.twig' %}

{% block title %}My Messages{% endblock %}

{% block body %}
  <div class="container">
    <h1 class="text-center my-4">My Messages</h1>

    <div class="row">
      <div class="col-md-6">
        <h2 class="mb-3">Received Messages</h2>
        {% if receivedMessages is empty %}
          <p>You have no received messages.</p>
        {% else %}
          <ul class="list-group">
            {% for message in receivedMessages %}
              <li class="list-group-item">
                <a href="{{ path('app_message_show', {id: message.id}) }}">
                  <span class="fw-bold">{{ message.sender.nom }}:</span> {{ message.content }}
                </a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>

      <div class="col-md-6">
        <h2 class="mb-3">Sent Messages</h2>
        {% if sentMessages is empty %}
          <p>You have no sent messages.</p>
        {% else %}
          <ul class="list-group">
            {% for message in sentMessages %}
              <li class="list-group-item">
                <a href="{{ path('app_message_show', {id: message.id}) }}">
                  <span class="fw-bold">{{ message.receiver.nom }}:</span> {{ message.content }}
                </a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>
    </div>
  </div>
{% endblock %}
