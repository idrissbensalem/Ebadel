{% extends 'base_front.html.twig' %} {% block title %}Article{% endblock %} {%
  block body %}
  
  <div class="page-title-area">
    <div class="container">
      <div class="page-title-content">
        <h2>Liste des offres</h2>
      </div>
    </div>
  </div>
  
  <section class="products-area products-collections-area pt-100 pb-70">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-4 col-md-12">
          <div class="woocommerce-widget-area">
            <div class="woocommerce-widget filter-list-widget">
              <h3 class="woocommerce-widget-title">{{nom}}</h3>
              <div class="selected-filters-wrap-list">
                <ul>
                  <li>
                    <img
                      src="{{ asset('uploads/brochures/' ~ image) }}"
                      alt="image"
                    />
                  </li>
                  <li>
                    <a href="#"
                      ><i class="bx bx-store"></i>
                    {{categorie}}</a>
                  </li>
                  <li>
                    <a href="#"
                      ><i class="bx bx-store"></i>
                      {{sousCategorie}}</a>
                  </li>
                  <li>
                    <a href="#"
                      ><i class="bx bx-store"></i>
                      {{marque}}</a>
                  </li>
                  <li>
                    <a href="#"
                      ><i class="bx bxs-timer"></i>
                      {{periodeUtilisation}}</a>
                  </li>
                  <li>
                    <a href="#"
                      ><i class="bx bx-shield-quarter"></i>
                      {{etat}}</a>
                  </li>
                  <li>
                    <a href="#"
                      ><i class="bx bxs-comment"></i>
                      {{ description }}</a>
                  </li>
                </ul>
                <br>
                  <a href="{{ path('app_mesarticles_edit', { id: id }) }}" style="margin: 0 14px;" >
                    <i class="bx bx-edit" ></i> Modifier
                  </a>
                {{ include('mes_articles/_delete_form.html.twig') }}
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-8 col-md-12">
          <div class="products-filter-options">
            <div class="row align-items-center">
              <div class="col-lg-4 col-md-4">
                <div class="d-lg-flex d-md-flex align-items-center">
                  <span class="sub-title d-lg-none"
                    ><a
                      href="#"
                      data-bs-toggle="modal"
                      data-bs-target="#productsFilterModal"
                      ><i class="bx bx-filter-alt"></i> Filter</a
                    ></span
                  >
                  <span class="sub-title d-none d-lg-block d-md-block"
                    >View:</span
                  >
                  <div class="view-list-row d-none d-lg-block d-md-block">
                    <div class="view-column">
                      <a href="#" class="icon-view-two">
                        <span></span>
                        <span></span>
                      </a>
                      <a href="#" class="icon-view-three active">
                        <span></span>
                        <span></span>
                        <span></span>
                      </a>
                      <a href="#" class="icon-view-four">
                        <span></span>
                        <span></span>
                        <span></span>
                        <span></span>
                      </a>
                      <a href="#" class="view-grid-switch">
                        <span></span>
                        <span></span>
                      </a>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-lg-4 col-md-4">
                <p>Showing 1 â€“ 18 of 100</p>
              </div>
              <div class="col-lg-4 col-md-4">
                <div class="products-ordering-list">
                  <select>
                    <option>Default Sorting</option>
                    <option>Sort by Latest</option>
                  </select>
                </div>
              </div>
            </div>
          </div>
          {{ include('offre/index.html.twig') }}

          <div class="pagination-area text-center">
            <a href="#" class="prev page-numbers"
              ><i class="bx bx-chevron-left"></i
            ></a>
            <span class="page-numbers current" aria-current="page">1</span>
            <a href="#" class="page-numbers">2</a>
            <a href="#" class="page-numbers">3</a>
            <a href="#" class="page-numbers">4</a>
            <a href="#" class="page-numbers">5</a>
            <a href="#" class="next page-numbers"
              ><i class="bx bx-chevron-right"></i
            ></a>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  {% endblock %}