{% extends 'base_front.html.twig' %} {% block title %}New Boutique{% endblock %}
{% block body %}
<section class="signup-area ptb-100">
  <div class="container">
    <div class="signup-content">
      <h2>Create an Boutique</h2>

      <div class="signup-form">
        {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
        <div class="form-group">
          <label>nom</label>
          {{ form_widget(form.nom,{'attr':{'placeholder':'Enter your name' , 'class':"form-control"

          }}) }}
          {{ form_errors(form.nom) }}
        </div>
        {# <div class="form-group">
          <label>Email</label>
          {{ form_widget(form.email,{'attr':{'placeholder':'Enter your email' , 'class':"form-control"

          }}) }}
          {{ form_errors(form.email) }}
        </div> #}
        <div class="form-group">
          <label>lien</label>
          {{ form_widget(form.lien,{'attr':{'placeholder':'Enter your lien' , 'class':"form-control"

          }}) }}
          {{ form_errors(form.lien) }}
        </div>
        <div class="form-group">
          <label>description</label>
          {{ form_widget(form.description,{'attr':{'placeholder':'Enter your description' , 'class':"form-control"

          }}) }}
          {{ form_errors(form.description) }}
        </div>
        <div class="form-group">
          <label>Numéro telephone</label>
          {{ form_widget(form.num_telephone,{'attr':{'placeholder':'Enter your num_telephone' , 'class':"form-control"

          }}) }}
          {{ form_errors(form.num_telephone) }}
        </div>
        <div class="form-group">
          <label>Numéro fixe</label>
          {{ form_widget(form.num_fixe,{'attr':{'placeholder':'Enter your num_fixe' , 'class':"form-control"

          }}) }}
          {{ form_errors(form.num_fixe) }}
        </div>
        <div class="form-group">
          <label>Gouvernorat</label>
          {{ form_widget(form.gouvernorat,{'attr':{'placeholder':'Enter your gouvernorat' , 'class':"form-control"

          }}) }}
          {{ form_errors(form.gouvernorat) }}
        </div>
        <div class="form-group">
          <label>Ville</label>
          {{ form_widget(form.ville,{'attr':{'placeholder':'Enter your ville' , 'class':"form-control"

          }}) }}
          {{ form_errors(form.ville) }}
        </div>
        <div class="form-group">
          <label>image</label>
          {{ form_widget(form.image,{'attr':{'placeholder':'Enter your image' , 'class':"form-control"

          }}) }}
          {{ form_errors(form.image) }}
        </div>

        <button type="submit" class="default-btn">Save</button>

        <a href="{{ path('app_boutique_index') }}" class="return-store"
          >or Return to boutique</a
        >
        {{ form_end(form) }}
      </div>
    </div>
  </div>
</section>

{% endblock %}
